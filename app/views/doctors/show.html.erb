<h1><%= @doctor.name %>'s home page</h1>

<h3>Name:<br /></h3>
<%= @doctor.name %>

<h3>Department:<br /></h3>
<%= @doctor.department %>

<h3>Appointments:</h3>
<ul>
<li><% @doctor.patients.each do |patient| %>
<%= link_to patient.name, patient_path(patient.id) %>:
<% patient.appointments.each do |appointment| %>
<p><%= appointment.std_date %></p>
</li>
<% end %>
<% end %>
</ul>
